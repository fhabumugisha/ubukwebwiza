<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	
	<!-- Application Loggers -->
	<logger name="com.buseni.ubukwebwiza">
		<level value="debug" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="warn" />
	</logger>
	<logger name="org.springframework.aop">
		<level value="warn" />
	</logger>
	 
	<logger name="org.springframework.beans">
		<level value="warn" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.web">
		<level value="warn" />
	</logger>
	<logger name="org.springframework.security">
		<level value="warn" />
	</logger>
	<logger name="org.springframework.jndi">
		<level value="warn" />
	</logger>
	
	<logger name="com.github.dandelion">
		<level value="warn" />
	</logger>
	<logger name="net.sf.ehcache">
		<level value="warn" />
	</logger>
	<!-- 
	<logger name="org.hibernate.hql">
		<level value="warn" />
	</logger>
	<logger name="org.hibernate.loader">
		<level value="warn" />
	</logger>
	<logger name="org.hibernate.cfg">
		<level value="warn" />
	</logger>
	<logger name="org.hibernate.tool">
		<level value="warn" />
	</logger>
	<logger name="org.hibernate.validator">
		<level value="warn" />
	</logger>
	
	<logger name="org.hibernate.id">
		<level value="warn" />
	</logger> -->
	
	<logger name="org.hibernate">
		<level value="warn" />
	</logger>
	
	

	<!-- Root Logger -->
	<root>
		<priority value="debug" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>
